<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.domain.repository.template.mapper.TemplateMapper">

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into template values
            (#{template.name}, #{template.memberId})
    </insert>

    <select id="findAll" resultType="List">
        select *
        from template
        where member_id = #{memberId}
    </select>

    <select id="findById" resultType="Template">
        select *
        from template
        where id = #{template_id}
    </select>

    <update id="update">
        update template
        set name = #{updateParam.name}
        where id = #{id}
    </update>

</mapper>



<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.domain.template.Column">
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into column values
            (#{template_id}, #{entity_id}, #{name}, #{type})
    </insert>

    <select id="findAll" resultType="Template">
        select *
        from column
    </select>

    <select id="findById" resultType="Template">
        select *
        from column
        where id = #{column_id}
    </select>

    <update id="update">
        update column
        set name = #{name},
            type = #{type}
        where id = #{column_id}
    </update>
</mapper>

